{
    "mode": null,
    "mapping.!Path":{
        "$ref": "{R{_Dir}R}",
        "method": {
            "name": "join_Path",
            "kwargs":{
                "path": "mapping.txt"
            }
        }    

    },
    "hosts.!Path":{
        "$ref": "$Dir",
        "method": {
            "name": "construct",
            "args":["Path"],
            "kwargs":{
                "path": "/etc/hosts"
            }
        }    
    }

}

